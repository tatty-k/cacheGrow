<%- include('../partials/header') %>

<main class="container" id="new-goal">

    <form id="edit-goal" action="/users?_method=PUT" method="POST">
        <div class="mx-auto form-group form-row">   
            <div class="col-5">
                <label>Savings Goal:</label>
                <input type="number" name="goal" class="form-control" value="<%= goal.goal %>" required>
            </div>
            <div class="col-auto">    
                <label>Why are you saving?</label>
                <input type="text" name="savingsPurpose" class="form-control" value="<%= goal.savingsPurpose%>" required>
                <input hidden type="text" name="id" value="<%= goal._id %>">
            </div>   
            <div class="col-1 mt-auto" >
                <button type="submit" class="btn btn-success">Submit</button>
            </div> 
        </div>
    </form>

</main>

<%- include('../partials/footer') %>
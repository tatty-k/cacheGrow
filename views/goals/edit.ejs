<%- include('../partials/header') %>

<main class="form">
    <header class="header-footer">Edit Your Savings Goal</header>
    <form action="/users?_method=PUT" method="POST">
        <div class="form-group">   
            <input class="form-control" type="number" name="goal" value="<%= goal.goal %>" required>
        </div>
        <div class="form-group">     
            <input class="form-control" type="text" name="savingsPurpose" value="<%= goal.savingsPurpose%>" required>
            <input hidden type="text" name="id" value="<%= goal._id %>">  
        </div>   
        <div class="form-group">
            <button class="btn btn-success" type="submit" >Submit</button>
        </div> 
        <div></div>
    </form>

</main>

<%- include('../partials/footer') %>
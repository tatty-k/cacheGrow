<%- include('../partials/header') %>

<main id="new-goal">
    <form id="add-new-goal" action="/users/<%= user.id %>/goals" method="POST">
        <div class="form-row">   
            <div class="col">
                <label>Savings Goal:</label>
                <input type="number" name="goal" class="form-control" placeholder="$" required>
            </div>
            <div class="col">  
                <label>Why are you saving?</label>
                <input type="text" name="savingsPurpose" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success">Submit</button> 
        </div>
    </form>

</main>

<%- include('../partials/footer') %>